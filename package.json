{
	"name": "@typehaus/metropolis",
	"version": "12.0.0-next.0",
	"license": "Unlicense",
	"author": "chrismsimpson",
	"contributors": [
		{
			"name": "Nicholas Berlette",
			"email": "nick@berlette.com",
			"url": "https://typehaus.org"
		}
	],
	"maintainers": [
		{
			"name": "Nicholas Berlette",
			"email": "nick@berlette.com",
			"url": "https://typehaus.org"
		}
	],
	"repository": "typehaus/metropolis",
	"bugs": "https://github.com/typehaus/metropolis/issues",
	"homepage": "https://typehaus.org/metropolis",
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@6.23.4",
	"scripts": {
		"test": "echo 'No tests configured yet!' && exit 1",
		"build:css": "node bin/build",
		"build:docs": "pnpm dev -C docs",
		"lint": "prettier --check '**/*.{ts,js,css,json,md,yml,yaml}'",
		"format": "prettier --write '**/*.{ts,js,css,json,md,yml,yaml}'",
		"preversion": "pnpm lint && pnpm build:css",
		"version": "pnpm format && git add --all",
		"postversion": "git push --follow-tags",
		"prepublishOnly": "pnpm version prerelease --preid=next -m 'ðŸ”– %s' --no-git-checks --sign-git-tag --git-tag-version --allow-same-version --force",
		"postpublish": "pnpm clean",
		"release": "pnpm publish --no-git-checks --registry=https://registry.npmjs.org",
		"clean": "rm -rf node_modules"
	},
	"main": "./dist/css/Metropolis.css",
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./dist/css/Metropolis.css",
			"require": "./dist/css/Metropolis.css",
			"default": "./dist/css/Metropolis.css"
		},
		"./css/*": "./dist/css/Metropolis-*.css",
		"./woff/*": "./dist/woff/Metropolis-*.woff",
		"./woff2/*": "./dist/woff2/Metropolis-*.woff2",
		"./ttf/*": "./dist/ttf/Metropolis-*.ttf",
		"./otf/*": "./dist/otf/Metropolis-*.otf",
		"./eot/*": "./dist/eot/Metropolis-*.eot",
		"./package.json": "./package.json",
		"./*": "./dist/*"
	},
	"description": "A modern, geometric typeface by Chris M. Simpson, maintained by typehaus.org",
	"keywords": [
		"font",
		"type",
		"typeface",
		"metropolis",
		"geometric",
		"modern",
		"typehaus",
		"typography",
		"sans-serif",
		"glyphs"
	],
	"files": [
		"files",
		"dist"
	],
	"devDependencies": {
		"@brlt/prettier": "^1.6.3",
		"webfont": "11.2.26"
	}
}
